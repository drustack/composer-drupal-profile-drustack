{
    "dependencies": {
        "node-sass": "~5.0",
        "stylelint": "~13.12",
        "stylelint-config-standard": "~21.0",
        "stylelint-csstree-validator": "~1.9",
        "stylelint-scss": "~3.19"
    },
    "stylelint": {
        "extends": "stylelint-config-standard",
        "plugins": [
            "stylelint-scss",
            "stylelint-csstree-validator"
        ],
        "rules": {
            "at-rule-no-unknown": null,
            "csstree/validator": true,
            "scss/at-rule-no-unknown": true
        }
    }
}
